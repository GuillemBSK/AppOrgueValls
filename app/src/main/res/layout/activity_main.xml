<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="576dp"
        android:layout_height="486dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Benvinguda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#26000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="Benvinguts a la visita. Aquesta aplicació us anira guiant per a descobrir aquest instrument."
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:lineHeight="45dp"
                tools:layout_conversion_absoluteHeight="202dp"
                tools:layout_conversion_absoluteWidth="340dp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="265dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/btn_comenca"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:background="@drawable/button_background"
                android:ellipsize="none"
                android:fontFamily="sans-serif-smallcaps"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="Comença"
                android:textColor="#FFFFFF"
                android:textSize="34dp"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

