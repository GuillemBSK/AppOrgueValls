<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="576dp"
        android:layout_height="486dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Benvinguda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_view"
                android:fontFamily="casual"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Benvinguts a la visita. Aquesta aplicació us anira guiant per a descobrir aquest instrument."
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="202dp"
                tools:layout_conversion_absoluteWidth="340dp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="265dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <Button
                android:id="@+id/btn_comenca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:ellipsize="none"
                android:fontFamily="casual"
                android:text="Comença"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>

