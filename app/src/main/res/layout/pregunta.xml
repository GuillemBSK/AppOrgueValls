<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="1281dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="71dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_errors"
                android:layout_width="250dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:background="#40000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:shadowColor="#4D000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="ERRORS: "
                android:textAlignment="center"
                android:textColor="#FF2600"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/num_errors_spinner"
                android:layout_width="391dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#40000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_encerts"
                android:layout_width="573dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#40000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:shadowColor="#4D000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="ENCERTS: "
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/num_encerts_spinner"
                android:layout_width="411dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#40000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <TextView
            android:id="@+id/preguntaSpinner"
            android:layout_width="698dp"
            android:layout_height="226dp"
            android:layout_gravity="center"
            android:background="#40000000"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="10dp"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="Busqueu aquest carreu i situeu-lo al plÃ nol."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="15dp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:srcCompat="@drawable/pregunta1" />

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="151dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/top_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="topLeft"
                    app:srcCompat="@drawable/top_left" />

                <ImageView
                    android:id="@+id/top_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="topRight"
                    app:srcCompat="@drawable/top_right" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/middle_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="middleLeft"
                    app:srcCompat="@drawable/middle_left" />

                <ImageView
                    android:id="@+id/middle_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="middleRight"
                    app:srcCompat="@drawable/middle_right" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bottom_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="bottomLeft"
                    app:srcCompat="@drawable/bottom_left" />

                <ImageView
                    android:id="@+id/bottom_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="bottomRight"
                    app:srcCompat="@drawable/bottom_right" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <LinearLayout
            android:layout_width="405dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/botoInfo"
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#4D000000"
                android:foregroundTint="#000000"
                app:srcCompat="@android:drawable/ic_dialog_info" />

            <TextView
                android:id="@+id/num_pregunta"
                android:layout_width="157dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#40000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>