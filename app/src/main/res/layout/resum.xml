<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_principal">

    <LinearLayout
        android:layout_width="509dp"
        android:layout_height="635dp"
        android:background="#54FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_encerts_resum"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#26000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="ENCERTS: "
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:lineHeight="45dp"
                tools:layout_conversion_absoluteHeight="202dp"
                tools:layout_conversion_absoluteWidth="340dp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="265dp" />

            <TextView
                android:id="@+id/encerts_resum"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#26000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:lineHeight="45dp"
                tools:layout_conversion_absoluteHeight="202dp"
                tools:layout_conversion_absoluteWidth="340dp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="265dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_errors_resum"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#26000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="ERRORS: "
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:lineHeight="45dp"
                tools:layout_conversion_absoluteHeight="202dp"
                tools:layout_conversion_absoluteWidth="340dp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="265dp" />

            <TextView
                android:id="@+id/errors_resum"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#26000000"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:lineHeight="45dp"
                tools:layout_conversion_absoluteHeight="202dp"
                tools:layout_conversion_absoluteWidth="340dp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="265dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            app:srcCompat="@drawable/emoji" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/txt_errors_resum2"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:background="#26000000"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="MOLTES GRÀCIES PER PARTICIPAR!"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:lineHeight="45dp"
            tools:layout_conversion_absoluteHeight="202dp"
            tools:layout_conversion_absoluteWidth="340dp"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="265dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <Button
            android:id="@+id/btn_inici"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:ellipsize="none"
            android:fontFamily="sans-serif-smallcaps"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="⬅Torna a l'inici"
            android:textColor="#FFFFFF"
            android:textSize="34dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>